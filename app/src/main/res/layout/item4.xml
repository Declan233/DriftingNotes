<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/item_box"
    android:orientation="horizontal"
    tools:context="com.example.xiaochong.driftingnotes.Activities.PoiActivity">

        <LinearLayout
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:padding="4dp"
                    android:layout_margin="2dp">
                        <TextView
                            android:id="@+id/history_title"
                            android:layout_height="30dp"
                            android:layout_width="match_parent"
                            android:textSize="20dp"
                            android:textColor="#1E90FF"
                            android:text="headline"
                            android:maxLength="20"/>
                        <TextView
                            android:id="@+id/history_snippet"
                            android:layout_height="30dp"
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:textColor="#949494"
                            android:text="content"
                            android:maxLength="40"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/location"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginEnd="4dp"/>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/history_loc_lon"
                                            android:layout_width="wrap_content"
                                            android:layout_height="20dp"
                                            android:textSize="14sp"
                                            android:text="经度"/>
                                        <TextView
                                            android:id="@+id/history_loc_lat"
                                            android:layout_width="wrap_content"
                                            android:layout_height="20dp"
                                            android:textSize="14sp"
                                            android:text="纬度"/>
                                </LinearLayout>
                        </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/history_text_image"
                    android:layout_gravity="center"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/history_delete_bt"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="删除"
            android:textColor="#ffffff"
            android:background="@drawable/deletekw_bt"/>



</LinearLayout>